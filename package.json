{
  "name": "your-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "npm-run-all --parallel dev:backend start:frontend",
    "dev:backend": "npm run dev --prefix backend",
    "start:frontend": "npm run start --prefix frontend",
    "build": "npm run build --prefix frontend && npm run build --prefix backend",
    "test": "npm run test --prefix frontend && npm run test --prefix backend",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "eslint": "^9.13.0",
    "jest": "^29.7.0"
  }
}
